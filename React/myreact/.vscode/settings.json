{
  "workbench.colorTheme": "One Dark Pro Night Flat",

  // Default Prettier formatter and enable format on save
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  // JavaScript-specific overrides
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Disable built-in JS validation to avoid conflict with ESLint
  "javascript.validate.enable": false,

  // ESLint and organize imports on save
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.organizeImports": true
  },

  // ESLint extension status always visible
  "eslint.alwaysShowStatus": true,
  "eslint.validate": ["javascript", "javascriptreact"],

  // Emmet config
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },

  // Prettier specific options
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "prettier.semi": true,
  "prettier.tabWidth": 4,
  "prettier.printWidth": 100,
  "prettier.endOfLine": "auto"
}
